{
    "compilerOptions": {
        "target": "esnext",
        "module": "esnext",
        "moduleResolution": "node",
        "strict": true,
        "jsx": "preserve",
        "sourceMap": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "lib": ["ESNext", "DOM"],
        "types": [],
        "baseUrl": "./"
    },
    "include": [
        ".vitepress/**/*.ts",
        ".vitepress/**/*.mts",
        ".vitepress/**/*.d.ts",
        ".vitepress/**/*.tsx",
        ".vitepress/**/*.vue",
    ],
}